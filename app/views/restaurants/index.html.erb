<h1>Restaurant Directory</h1>
<br>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>Phone Number</th>
  </tr>
 
<% @restaurant.each do |restaurant| %>
  <tr>
    <td><%= restaurant.name %></td>
    <td><%= restaurant.description %></td>
    <td><%= restaurant.address %></td>
    <td><%= restaurant.phone %></td>
    <td><%= link_to "Open", restaurant_path(restaurant) %></td>
  </tr>
<% end %>
</table>
 

<br>
 
<%= link_to "Create New Restaurant", new_restaurant_path %>
